#!/bin/bash
#
# Retrieve the latest dvb-apps scan files
#

URL=http://linuxtv.org/hg/dvb-apps/archive/tip.tar.bz2
TMP=/tmp/getmuxlist.$$
TVH=$(cd $(dirname $0)/..; pwd)/data/dvb-scan

# Get files
rm -rf $TMP
mkdir -p $TMP
cd $TMP
(wget -O - -q $URL | tar xj) || (curl $URL | tar xj)
cd dvb-apps*

# Copy to TVH
rm -rf $TVH
mkdir -p $TVH
mv ./util/scan/* $TVH

# Cleanup
for f in $TVH/*; do
  [ -f $f ] && rm -f $f
done
rm -rf $TMP
